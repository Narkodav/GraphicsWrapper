{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },

    "configurePresets": [
        {
            "name": "mingw-debug",
            "displayName": "MinGW Debug",
            "generator": "MinGW Makefiles",
            "binaryDir": "${sourceDir}/build/mingw-debug",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "A:/compilers/mingw64/bin/gcc.exe",
                "CMAKE_CXX_COMPILER": "A:/compilers/mingw64/bin/g++.exe",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/mingw-debug",

                "CMAKE_PREFIX_PATH": "E:/Program Files (x86)/Code/C_code/libraries/CommonApi/install/mingw-debug-static/lib/cmake/CommonApi",
                "Containers_DIR": "E:/Program Files (x86)/Code/C_code/libraries/Containers/install/mingw-debug-static/lib/cmake/Containers"
            }
        },
        {
            "name": "mingw-release",
            "displayName": "MinGW Release",
            "generator": "MinGW Makefiles",
            "binaryDir": "${sourceDir}/build/mingw-release",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "A:/compilers/mingw64/bin/gcc.exe",
                "CMAKE_CXX_COMPILER": "A:/compilers/mingw64/bin/g++.exe",
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/mingw-release",

                "CommonApi_DIR": "E:/Program Files (x86)/Code/C_code/libraries/CommonApi/install/mingw-release-static/lib/cmake/CommonApi",
                "Containers_DIR": "E:/Program Files (x86)/Code/C_code/libraries/Containers/install/mingw-release-static/lib/cmake/Containers"
            }
        },
        {
            "name": "msvc-debug",
            "displayName": "MSVC Debug (Ninja)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/msvc-debug",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/msvc-debug"
            }
        },
        {
            "name": "msvc-release",
            "displayName": "MSVC Release (Ninja)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/msvc-release",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe",
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/msvc-release"
            }
        }
    ]
}